{
  "name": "worthy-node-template",
  "version": "1.0.0",
  "description": "Template nodejs service that contains the basic configuration for a modern node project",
  "main": "index.js",
  "scripts": {
    "prod": "node ./build/index.js",
    "start": "nodemon --exec npm run babel-node -- src/index.js",
    "debug": "nodemon --exec npm run babel-node-debug -- src/index.js",
    "babel-node": "babel-node ",
    "babel-node-debug": "babel-node $NODE_DEBUG_OPTION ",
    "test": "npm run babel-node -- test/test.js",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && time node build.js",
    "unitest": "NODE_ENV=test ./node_modules/.bin/mocha --exclude node_modules --require @babel/register 'src/**/*.spec.js'",
    "automationtest": "NODE_ENV=test ./node_modules/.bin/mocha --exclude node_modules --require @babel/register 'test/*Test.js' --timeout 10000 --exit",
    "coverage": "nyc npm run unitest"
  },
  "author": "Noam Shabat",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.7",
    "@worthy-npm/microservices-automations": "^1.0.6",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.0.0",
    "sinon": "^7.5.0"
  },
  "dependencies": {
    "@worthy-npm/node-service-bootstrap": "^1.0.38",
    "@worthy-npm/worthy-logger": "^1.0.25",
    "agenda": "^3.1.0",
    "axios": "^0.19.2",
    "camelcase-keys": "^6.2.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "moment": "^2.27.0",
    "mongoose": "^5.10.4"
  }
}
